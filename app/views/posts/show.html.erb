<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content.html_safe %>
</p>

<h3>Comments</h3>
<div id="comments">
  <%= render @post.comments %>
</div>

<h3><a href="#" id="view_comment_form">Add a comment</a></h3>
<div id="comment_form">
  <%= render 'comments/form' %>
</div>

<%= link_to 'Edit', edit_post_path(@post) %>
<%= link_to 'Back', posts_path %>