<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content.html_safe %>
</p>

<h2>Comments</h2>
<%= render @post.comments %>

<h3><a href="#" id="view-comment-form">Add a comment</a></h3>
<div id="comment-form">
  <%= render 'comments/form' %>
</div>

<%= link_to 'Edit', edit_post_path(@post) %>
<%= link_to 'Back', posts_path %>