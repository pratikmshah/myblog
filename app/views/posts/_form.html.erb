<%= form_for @post do |f| %>

  <% if @post.errors.any? %>
    <div id="error">
      <h4>
        <%= pluralize(@post.errors.count, "errors") %> prevented the article from saving.
      </h4>
      <ul>
        <% @post.errors.each do |error| %>
          <li> <%= error %> </li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title, :class => 'form-control' %>
  </p>

  <p>
    <%= f.label :content %><br>
    <%= f.text_area :content, :id => 'post_editor' %>
  </p>

  <p>
    <%= f.submit 'Save Post', :class => 'btn btn-default form-control' %>
  </p>

<% end %>