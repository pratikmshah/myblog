<h1>Editing article</h1>

<%= form_for :post, url: post_path(@post), method: :patch do |f| %>

  <% if @post.errors.any? %>
    <div id="error">
      <h3>
        <%= pluralize(@post.errors.count, "error") %> caused this article from being saved:
      </h3>
      <ul>
        <% @post.errors.each do |error| %>
          <li> <%= error %> </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', posts_path %>