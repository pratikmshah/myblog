<div>
  <div>
    <% if flash[:notice] %>
      <%= flash[:notice] %>
    <% end %>
  </div>
</div>

<section id="posts">
  <h1>Recent Posts</h1>
    <% if admin? %>
      <%= link_to 'New Post', new_post_path %>
    <% end %>
  <div>
    <% @posts.each do |post| %>
      <div>
        <h3> <%= post.title %> </h3>
        <p>
          <%= post.content.html_safe %>
         <div><%= link_to 'Show', post_path(post) %></div>
        </p>
        <% if admin? %>
          <span>
                 <%= link_to 'Edit', edit_post_path(post) %>
                 <%= link_to 'Delete', post_path(post),
                                       method: :delete,
                                       data: { confirm: 'Delete?' }%>
          </span>
        <% end %>
      </div>
    <% end %>
  </div>
</section>