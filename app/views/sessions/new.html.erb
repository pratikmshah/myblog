<div class="container">
  <div class="row">
    <div class="col-lg-6 col-lg-offset-3">
      <h3 class="text-center login-title text-primary">Admin Login</h3>
      <%= form_for :user, :html => { url: '/login', :role => 'form', :class => 'form-width' } do |f| %>
        <div class='form-group'>
          <%= f.label :username, :class => 'sr-only' %>
          <div class="input-group input-group-sm">
            <span class="input-group-addon">
              <span id="log-user-i" class="glyphicon glyphicon-user"></span>
            </span>
            <%= text_field_tag :username, '', :class => 'form-control', :placeholder => 'Username' %>
          </div>
        </div>

        <div class='form-group'>
          <%= f.label :password, :class => 'sr-only' %>
          <div class="input-group input-group-sm">
            <span class="input-group-addon">
              <span id="log-pass-i" class="glyphicon glyphicon-lock"></span>
            </span>
            <%= password_field_tag :password, '', :class => 'form-control', :placeholder => 'Password'  %>
          </div>
        </div>

        <div class='form-group'>
          <%= f.submit :Login, :class => 'form-control btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>


